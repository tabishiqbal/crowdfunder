
<div class="center">
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-sm-6 col-md-4">

        <div class="thumbnail">
          <%= image_tag project.image.url(:medium) %>
          <div class="caption">
            <h3><%= project.name %></h3>
            <p><strong>Funding Goal</strong> <%= number_to_currency(project.funding_goal) %></p>
            <p><%= project.description %></p>
            <p><strong>End Date</strong> <%= project.end_date.to_date %></p>
            <p><%= link_to 'Show', project, class: "btn btn-link" %> <%= link_to 'Edit', edit_project_path(project), class: "btn btn-link" %></p>
            
          </div>
        </div>
        
      
          
        
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>

      </div>
    <% end %>
  </div>
</div>
